{
    "name": "igzard/ncore",
    "description": "PHP Ncore Parser",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Igzard\\Ncore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Igzard\\Ncore\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/"
        ]
    },
    "authors": [
        {
            "name": "Ign√°cz Gergely",
            "email": "gergely.igncz@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.8",
        "nesbot/carbon": "^3.2",
      "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
      "ext-http": "*"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
